<UserControl x:Class="NesuCentre.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NesuCentre"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Ellipse Name="C_Test"/>
        <Rectangle Name="C_MainPanel" StrokeThickness="6" Fill="#FF232323" >
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Transparent" Offset="1"/>
                    <GradientStop Color="Aqua" Offset="0.972"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>
        <Canvas Name="C_Canvas" Margin="10" Drop="C_Canvas_Drop">
            
        </Canvas>
    </Grid>
</UserControl>
